<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e0e8"
    android:orientation="vertical">

    <!--put a listView here in the future-->

    <ListView
        android:id="@+id/chatting_message_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:divider="@color/background_floating_material_dark" />

    <com.example.lawrence.chatingroomdemo.SendMessageView
        android:id="@+id/chatting_sendmessage_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/background_floating_material_dark" />

</LinearLayout>
